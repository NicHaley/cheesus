<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Type</th>
      <th>Feature</th>
      <th>Location</th>
      <th>Picture</th>
      <th>Name</th>
      <th>Website</th>
      <th>Open</th>
      <th>Close</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <tr>
      <% @restaurant.each do |restaurant| %>
      <td><%= link_to image_tag(restaurant.picture, :height=> "80"), "/restaurants/#{restaurant.id}" %></td>
      <td>
        <% case restaurant.price %>
        <% when 1 %>
        $
        <% when 2 %>
        $$
        <% when 3 %>
        $$$
        <% when 4 %>
        $$$$
        <% end %>
      </td>
      <td><%= restaurant.cuisine_type %></td>
      <td><%= restaurant.feature %></td>
      <td><%= restaurant.location %></td>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.website %></td>
      <td><%= restaurant.open %></td>
      <td><%= restaurant.close %></td>
      <td><%= restaurant.capacity %></td>
      <td><%= link_to 'Show', restaurant %></td>

    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Restaurant', new_restaurant_path %>