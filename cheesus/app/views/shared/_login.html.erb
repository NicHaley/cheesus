<h1>Customer Log In</h1>
<%= form_tag c_sessions_path do %>
<div class="field">
	<%= label_tag :email %><br/>
	<%= text_field_tag :email, params[:email] %>
</div>
<div class="field">
	<%= label_tag :password %><br/>
	<%= password_field_tag :password %>
</div><br/>
<div class="actions">
	<%= button_tag "Log in" %>
</div>
<br/>
<p>Not a customer? If you are a restaurant owner, please <%= link_to "Log In", new_r_user_path %> or <%= link_to "Sign Up", new_r_user_path %>.</p>
<% end %>