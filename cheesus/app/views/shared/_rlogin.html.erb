<%= form_tag r_sessions_path do %>
	<h1>Restaurant Log In</h1>
		<div class="field">
			<%= label_tag :email %><br/>
			<%= text_field_tag :email, params[:email], placeholder: "Email address" %>
		</div>
		<div class="field">
			<%= label_tag :password %><br/>
			<%= password_field_tag :password %>
		</div><br/>
		<div class="actions">
			<%= button_tag "Log in" %>
		</div>
	<br/>
<% end %>
