<!DOCTYPE html>
<html>
<head>
  <title>Cheesus</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="cuserinfo">
<% if c_current_user %>
Signed in as <%= c_current_user.name %>. <%= link_to "Log out", c_session_path("current"), :method => :delete %>
<% else %>
<%= link_to "Log in", new_c_session_path %> or <%= link_to "Sign up", new_c_user_path %>
<% end %>
</p>


<%= yield %>

</body>
</html>
