
<%= form_tag c_sessions_path do %>
	<h2> Please sign in</h2>
		<div class="field">
			<%= label_tag :email %><br/>
			<%= text_field_tag :email, params[:email], placeholder: "Email address" %>
		</div>
		<div class="field">
			<%= label_tag :password %><br/>
			<%= password_field_tag :password %>
		</div><br/>
		<div class="actions">
			<%= button_tag "Log in" %>
		</div>
	<br/>
	<%= link_to "Go Back", root_path %>
<% end %>
